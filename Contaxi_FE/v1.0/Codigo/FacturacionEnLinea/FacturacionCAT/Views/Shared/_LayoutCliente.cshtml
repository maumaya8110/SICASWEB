<!DOCTYPE html>
<html>
<head lang="es">
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Cliente Aero Contaxi</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/site.css")
    <link href="@Url.Content("~/Content/font-awesome.css")" rel="stylesheet" type="text/css">
    <style type="text/css">
        .upper {
            text-transform: uppercase;
        }

        .panel-heading {
            font-weight: bold !important;
        }
    </style>
    </head>
    <body>
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0; margin-left:10px; margin-right:10px;">
            <div class="navbar-header">

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img src="@Url.Content("~/Content/images/logo.png")" class="img-responsive float-left" style="width:110px; height:45px;margin-top:-10px; margin-right: 5px;" />
                    <h2 class="float-left" style="margin-top:-10px;">Facturación Usuarios Registrados</h2>
                </a>
            </div>
            <div class="float-right">
                <ul class="nav navbar-top-links navbar-right">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="@Url.Action("Index","Cliente")"><i class="fa fa-taxi fa-fw"></i>Facturar</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Historial","Cliente")"><i class="fa fa-list-ol fa-fw"></i>Historial</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Perfil","Cliente")"><i class="fa fa-gear fa-fw"></i>Settings</a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="@Url.Action("LogOut","Cuenta")"><i class="fa fa-sign-out fa-fw"></i>Cerrar Sesión</a>
                            </li>
                        </ul>
                        <!-- /.dropdown-user -->
                    </li>
                </ul>
            </div>
        </nav>
        <div class="container body-content" style="margin-top:5px;">
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer style="text-align:center;">
            <div class="content-wrapper center-block">
                <p>&copy; @DateTime.Now.Year - URGI</p>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        <script type="text/javascript" src="@Url.Content("~/Scripts/bootstrap.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.validate.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/moment.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/tableExport.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/LoginDlg.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/funciones.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.numeric.js")"></script>

        @RenderSection("scripts", required: false)
    </body>
</html>
